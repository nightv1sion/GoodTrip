@model RequestModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Tour";
}
<html>
<head>
     <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=K2D&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/createrequest.css" asp-append-version="true" />
</head>
<body>
    <div class="crcont" >
            <form method = "post">
                <p>Request for tour</p>
                <div class = "customername">
                <label asp-for="CustomerName">Your Name</label>
                </div>
                 <input asp-for="CustomerName" style= "border-radius:30px;"/>
            <div class = "customerlastname">
            <label asp-for="CustomerLastName">Your Last Name</label>
            </div>
            <input asp-for="CustomerLastName" style= "border-radius:30px;"/>
            <div class = "customerphone">
            <label asp-for="PhoneNumber">Your phone number</label>
            </div>
            <input asp-for="PhoneNumber" style= "border-radius:30px;"/>

            <input asp-for="TourId" type="hidden" />
            <div  class = "senbtn">
            <button type="submit">Send request</button></div>
            </form> 
    </div>
</body>
</html>