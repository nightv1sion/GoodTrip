@using goodtrip.Storage.Entity
@model List<Tour>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=K2D&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
</head>
<header>
    <div class = "container-fluid">
        <p class = "text-center CustomerProfile">Operator Profile</p>
    </div>
    <hr class="LineInHeader"align = "center">
</header>
<body>
    <div class="container-fluid">
        <div class = "row">
            <div class="sidebar col-3 containter-fluid">
                <div class="sidebarSquare">
                    <div class="Documents">
                        <a asp-action="OperatorChangeDocuments" style = "text-decoration: none; text-decoration-color: none; color: black; font-size: 16px;">Documents</a>
                    </div>
                     <div class="Requests">
                        <a asp-action="PrintRequests" style = "text-decoration: none; text-decoration-color: none; color: black; font-size: 16px;">Requests to me</a>
                    </div>
                    <div class="Something">
                        <a asp-action="CreateTour" style = "text-decoration: none; text-decoration-color: none; color: black; font-size: 16px;">Create tour</a>
                    </div>
                    <div class="MyTours" style = "background-color: rgba(154,110,246,7%); color: #8643D6;">
                        <a style = "text-decoration: none; text-decoration-color: none; color: black; font-size: 16px;">My tours</a>
                    </div>
                </div>
            </div>
            <div class = "col-6">
                @foreach(var tour in Model){
                    <div class="row">
                        <div class="col-3">
                            <div class="printedtour">
                                <a asp-controller = "Tour" asp-action="Index" asp-route-id="@tour.Id.ToString()" style = "text-decoration: none; text-decoration-color: none; color: black;">@tour.Name</a>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="editbutton">
                                <a asp-controller="Profile" asp-action="EditTour"  asp-route-id="@tour.Id.ToString()" style = "text-decoration: none; text-decoration-color: none; color: black;">Edit</a>
                            </div>
                        </div>
                        <div class = "col-3">
                            <div class="deletebutton">
                                <a asp-controller = "Profile" asp-action="DeleteTour" asp-route-id="@tour.Id.ToString()" style = "text-decoration: none; text-decoration-color: none; color: black;">Delete</a>
                            </div>
                        </div>
                        <div class = "col-3">

                        </div>
                    </div>
                }
                <div class = "buttoncreatetour">
                    <a asp-action="CreateTour" style = "text-decoration: none; text-decoration-color: none; color: black;">Create new tour</a>
                </div>
            </div>
            <div class = "logoutbar col-3">
                <div class = "LogoutButton">
                    <a asp-controller="Account" asp-action="Logout" class="logoutlink" style = "text-decoration: none; text-decoration-color: none; color: black; font-size: 16px;">LOG OUT</a> 
                </div>
            </div>
        </div>
    </div>
   
</body>
